<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2 class="mt-3">Editing Book</h2>

 <% if @book.errors.any? %>
  <h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
 <% end %>

 <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  <label for="book_title">Title</label><br>
  <%= f.text_field :title, class:"form-control" %>
  <label for="book_opinion">Opinion</label>
  <%= f.text_area :body, class:"form-control" %><br>
  <%= f.submit 'Update Book', class:"btn btn-success" %>
 <% end %><br>
 <%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
</div>
</div>

