<p class="notice"><%= flash[:notice] %></p>
<main>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

<% if @user.errors.any? %>
 <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

     <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
     <label for="user_name">Title</label><br>
     <%= f.text_field :name, class:"form-control" %><br>
     <label for="profile_image">Image</label><br>
     <%= f.file_field :profile_image, accept: "image/*" %><br><br>
     <label for="user_introduction">introduction</label>
     <%= f.text_area :introduction, class:"form-control" %><br>
     <%= f.submit 'Update User', class:"btn btn-secondary" %>
     <% end %><br>
    </div>
  </div>
</div>
</main>